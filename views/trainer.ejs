<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Trainer page</title>
    <script src="functions.js"></script>
</head>
<body>
	<button type="button" onclick="kill_session()">log out</button>
	<div class="content">
		<div class="listOfExercises">
            <div id="exercises_to_display"></div>
		</div>

		<div>
			<form class="search" action="/search" method="get">
                <input class="bar" type="text" placeholder="Search by username" id="inputfield_search">
                <button onclick="getUsername()" type="button">Search</button>
            </form>
		</div>
		<div class="add">
			<input class="exercise" type="text" placeholder="Add exercise" id = "inputfield_exercise">
			<input class="description" type="text" placeholder="Description" id = "inputfield_description">
			<button class="sub" onclick="save_exercise_and_description()" type="submit"> Add</button>
		</div>
	</div>
    <script>show_exercises_and_descriptions()</script>
</body>

